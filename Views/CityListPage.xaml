<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniWeatherApp.Views.CityListPage"
             xmlns:viewmodels="clr-namespace:MiniWeatherApp.ViewModels"
             xmlns:models="clr-namespace:MiniWeatherApp.Models"
             x:DataType="viewmodels:CityListViewModel"
             Title="Pretraga gradova"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="false">

    <Grid RowDefinitions="Auto,*">
        
        <SearchBar x:Name="CitySearchBar"
                   Placeholder="PretraÅ¾i gradove..."
                   Text="{Binding SearchText}"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   BackgroundColor="#F5F5F5"
                   Margin="10"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Cities}"
                        SelectionMode="None"
                        Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:City">
                    <Grid Padding="10">
                        <Frame CornerRadius="10" Padding="15" BorderColor="#E0E0E0">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CityListViewModel}}, Path=SelectCityCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                                <Label Text="ðŸ“" FontSize="20" VerticalOptions="Center"/>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="{Binding Name}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="Black"/>
                                    <Label Text="{Binding Latitude, StringFormat='Lat: {0:F2}'}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="30">
                    <Label Text="Nema pronaÄ‘enih gradova" 
                           HorizontalTextAlignment="Center" 
                           TextColor="Gray"
                           FontSize="16"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>